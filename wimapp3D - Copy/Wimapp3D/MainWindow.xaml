<Window x:Class="Wimapp3D.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wimapp3D"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="550">
    <Grid>
        <Button Content="StartGame" PreviewMouseLeftButtonDown="StartGame" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Slider HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top" Width="120"/>
        <Button Content="AdvanceGame" PreviewMouseLeftButtonDown="AdvanceGame" HorizontalAlignment="Left" Margin="10,71,0,0" VerticalAlignment="Top"/>
        <Button Content="EndGame" PreviewMouseLeftButtonDown="EndGame" HorizontalAlignment="Left" Margin="10,112,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
